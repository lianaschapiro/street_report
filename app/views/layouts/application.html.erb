<!DOCTYPE html>
<html>
<head>
  <title>StreetReport</title>
 	
	<script src="https://maps.googleapis.com/maps/api/js"></script>
 	
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
<link href='https://fonts.googleapis.com/css?family=Oleo+Script' rel='stylesheet' type='text/css'>
<meta name="viewport" content="width=device-width">
</head>
<body>
	<div id="flashy">
		<% if flash[:notice] %>
			<p><%= flash[:notice] %></p>
		<% end %>
	</div>
	<% if current_user %>
		<div class="admin_toolbar">
			<ul class="left">
				<li>Admin toolbar</li>
			</ul>
			<ul class="right">
				<li><%= link_to "Review Flagged Content", admin_show_path %></li>
				<li><%= link_to "Log Out", log_out_path %></li>
			</ul>
		</div>
	<% end %>
	<nav>
		<ul class="left">
			<li><%= link_to "StreetReport", root_path %></li>
		</ul>
		<div id="mobile_menu">Menu</div>
		<ul class="right">
			<li><%= link_to "MAP", root_path %></li>
			<li><%= link_to "ALL REPORTS", reports_path %></li>
			<li><%= link_to "CONTACT", contact_path %></li>
		</ul>
	</nav>

		<%= yield %>

	<script type="text/javascript">
		initialize();
	</script>
</body>
</html>
